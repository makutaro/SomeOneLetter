  <custom-card class="card" style="top:30vh">
    <%= form_with model: @user,class: "custom-form", url: new_user_step1_path(resource_name) do |f| %>
    <%= render "devise/shared/error_messages", resource: @user %>

    <div class="form-field">
      <%= f.label "メールアドレス" %><br />
      <%= f.text_field :email, autofocus: true, placeholder: "sample@example.com" ,autocomplete: "email", class: "form-control",value:"sample@example.com" %>
    </div>

    <div class="form-field">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: "6文字以上", class: "form-control", value: "makutaro" %>
    </div>

    <div class="form-field">
      <%= f.label "パスワード(確認)" %><br />
      <%= f.password_field :password_confirmation, class: "form-control",value: "makutaro" %>
    </div>

    <div class="form-action text-center">
      <%= f.submit "次へ",class: "btn btn-primary" %>
      <%= link_to "キャンセル",root_url, class: "btn custom-btn btn-primary" %>
    </div>
    <% end %>
</custom-card>
