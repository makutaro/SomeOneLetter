<%= form_with model: @user, class: "edit-form", url: registration_path(resource_name), html: { method: :put } do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="center">
    <%= f.label :image,class:"form-image-file" do %>
      <%= 
        if current_user.image.attached? 
              image_tag current_user.image, size: "100x100", class:"center-block rounded-circle custom-image"
        else image_tag "bottle_ship.png",size:"100x100", class:"center-block rounded-circle custom-image"
        end
      %>
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
    <% end %>
  </div>
 
  <div class="form-field mx-auto">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-field">
    <%= f.label "パスワード(変更後)" %><em><%= @minimum_password_length %>文字以上 </em><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
    
    <% end %>
  </div>

  <div class="form-field">
    <%= f.label "新しいパスワード(確認)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-field">
    <%= f.label :すきなもの %><br />
    <%= f.text_field :like_thing ,class: "form-control"%>
  </div>

  <div class="form-field">
    <%= f.label :すんでいるところ %><br />
    <%= f.text_field :location ,class: "form-control" %>
  </div>

  <div class="form-field">
    <%= f.label "現在のパスワード ※必須" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" ,class: "form-control" %>
  </div>

  <div class="form-action text-center">
    <%= f.submit "更新",class: "btn custom btn-primary"%>
    <%= link_to "Back", home_url ,class: "btn custom btn-secondary" %>
  </div>
<% end %>

  <div class="card edit-card center">
    <h3 class="center">会員情報削除</h3>
    <div class="custom-form">
      <h4>※全ての情報が削除されます</h4>
      <div class="form-action">
        <%= button_to "退会する", registration_path(resource_name),class: "btn custom btn-danger ", data: { confirm: "全てのユーザー情報が削除されます。よろしいですか？" }, method: :delete %>
      </div>
    </div>
  </div>