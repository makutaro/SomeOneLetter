<% provide(:title, "【サービス名】") %>

  <div class="home-upper-side">
    <div class="col">
      <%= if current_user.image.attached?
            image_tag current_user.image, size: "120x120", class:"center-block rounded-circle custom-image"
        else image_tag "bottle_ship.png",size:"120x120", class:"center-block rounded-circle custom-image"
      end %>
      <div class="name"><%= current_user.name%></div>
    </div>
  </div>

    <div class="contaner" id="home-container">
      <div class="row">
        <%= render 'shared/home/home_col', { image:"icons/letter", id:"#new-letter-modal", text:"手紙をながす"} %>
        <%= render 'shared/home/home_col', { image:"icons/post",   url:inbox_record_url(id:current_user.id), text:"届いた手紙"} %>
        <%= render 'shared/home/home_col', { image:"icons/gear",   url:edit_user_registration_url, text:"プロフィール"} %>
      </div>
      <div class="row">
        <%= render 'shared/home/home_col', { image:"icons/gear",   url:home_url, text:"設定"} %>
        <%= render 'shared/home/home_col', { image:"icons/wakaba", url:home_url, text:"注意とマナー"} %>
        <%= render 'shared/home/home_col', { image:"icons/bell",   url:home_url, text:"お知らせ"} %>
      </div>
    </div>

    <form class="row g-3 needs-validation" novalidate>
  <div class="col-md-4">
    <label for="validationCustom01" class="form-label">First name</label>
    <input type="text" class="form-control" id="validationCustom01" value="Mark" required>
    <div class="valid-feedback">
      Looks good!
    </div>

  <div class="col-12">
    <button class="btn btn-primary" type="submit">Submit form</button>
  </div>
</form>