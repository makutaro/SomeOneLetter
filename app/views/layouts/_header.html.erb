<!-- ログイン状態でのみ表示されるheaderを定義-->

<header id="header">
  <nav id="header-nav" class="navbar navbar-light fixed-top">

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#header-nav-col"
      aria-controls="header-nav-col" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%# roomページの場合  %>
    <% if current_page?(room_inbox_records_url) %>
      <div id="header-logo" , class=" align-items-center navbar-brand">
       <% if current_user.image.attached? %>
        <%= image_tag @inbox_record.image,size:"35x35", class:"d-inline-block align-top " %>
       <% else %>
        <%= image_tag "bottle_ship.png",size:"35x35", class:"d-inline-block align-top " %>
       <% end %>
        <%= @inbox_record.to_user.name %>
      </div>

    <%# その他ログイン済みの場合  %>
    <% else %>
      <a id="header-logo" , class="align-items-center navbar-brand" href="<%= root_url %>">
        <%= image_tag "bottle_ship.png",size:"35x35", class:"d-inline-block align-top " %>
        Some_One_Letter
      </a>
    <% end %>

    <div class="collapse" id="header-nav-col" style="flex-basis: 100%;">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "ホーム", root_url, class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to "問い合わせ", contact_url, class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to "プロフィール", edit_user_registration_url, class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to "設定", "", class: "nav-link active" %></li>
        <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_url, method: :delete, class: "nav-link active" %>
        </li>
      </ul>
    </div>

  </nav>

</header>